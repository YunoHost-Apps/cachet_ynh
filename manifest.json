{
    "name": "Cachet",
    "id": "cachet",
    "packaging_format": 1,
    "description": {
        "en": "Open source status page system",
        "fr": "SystÃ¨me de page de statut open source"
    },
    "version": "2.3.18~ynh2",
    "url": "https://cachethq.io/",
    "license": "BSD-3-Clause",
    "maintainer": {
        "name": "JimboJoe",
        "email": "jimmy@monin.net"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "admin_password",
                "type": "password",
                "optional": true
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
             }
        ]
    }
}
